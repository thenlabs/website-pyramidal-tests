{% extends "base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    pre {
      background-color: #2b2b2b;
    }
  </style>
{% endblock %}

{% block content %}
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-2 d-none d-lg-block">
        <div class="row">
          <div class="col main-menu">
            {{ mainMenu|raw }}
          </div>
        </div>
      </div>
      <div class="col-lg-8 bg-white p-4">
        {{ content|raw }}
      </div>
      <div class="col-lg-2 d-none d-lg-block main-menu">
        {% if secondaryMenu is not empty %}
          <ul>
            {% for item in secondaryMenu %}
              <li><a href="#{{ item.slug }}">{{ item.text }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}